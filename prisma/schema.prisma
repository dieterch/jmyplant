datasource db {
  provider = "sqlite" // Oder eine andere DB wie MySQL, SQLite, etc.
  url      = env("DATABASE_URL")
}

model Engine {
  id                        String     @id @default(uuid())
  assetId                   Int        @unique
  countOpHour               Int
  powerNominal              Int?
  paraSpeedNominal          Int?
  operationalCondition      String
  shutdownCounter           Int
  startupCounter            Int
  startsOphRatio            Float
  engineVersion             String
  engineType                String
  engineSeries              String
  country                   String
  commissioningDate         DateTime
  designNumber              String
  serialNumber              String @unique
  controlSystemType         String?
  engineId                  String?
  ibUnitCommissioningDate   DateTime?
  ibNox                     String?
  ibFrequency               String?
  ibItemDescriptionEngine   String?
  ibSiteName                String?
  ibStatus                  String?
}
